<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="item"
            type="com.example.marvelverse.domain.entities.main.Character" />
        <variable
            name="listener"
            type="com.example.marvelverse.app.ui.home.interfaces.CharacterInteractionListener" />

    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:onClick="@{() -> listener.onCharacterClick(item)}"
        android:layout_marginEnd="@dimen/margin_small">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/characterCardImage"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/character"
            app:shapeAppearanceOverlay="@style/card_circle"
            app:strokeColor="#303030"
            app:imageUrl="@{item.thumbnail.path+'.'+item.thumbnail.extension}"
            app:strokeWidth="1dp" />

        <TextView
            android:id="@+id/characterCardText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            tools:text="Spider Man"
            android:textColor="#303030"
            android:text="@{item.name}"
            android:textSize="12sp" />

    </LinearLayout>
</layout>